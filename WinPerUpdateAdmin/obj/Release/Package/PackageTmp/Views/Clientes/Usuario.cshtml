<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Detalles Usuario Cliente</h1>
            <ol class="breadcrumb autoscroll">
                <li><a href="/Clientes#/">Clientes</a></li>
                <li><a href="/Clientes#/EditCliente/{{idCliente}}">{{cliente.Nombre}}</a></li>
                <li class="active">Un Usuario</li>
            </ol>
        </div>
    </div>
    <div class="row" ng-show="msgError != ''">
        <div class="col-md-12">
            <div class="alert alert-danger">
                <strong>Error: </strong> {{msgError}}
            </div>
        </div>
    </div>
    <div class="row" ng-show="msgSuccess != ''">
        <div class="col-md-12">
            <div class="alert alert-success">
                {{msgSuccess}}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="btn-toolbar hidden-xs">
                <div class="btn-group" role="toolbar">
                    <a ng-click="ShowConfirm()" ng-hide="formData.estado=='C' || idUsuario==0" data-toggle="modal" class="btn btn-danger">
                        <span class="fa fa-ban"></span> Dejar No Vigente
                    </a>
                    <a ng-click="ShowConfirm()" ng-hide="formData.estado=='V' || idUsuario==0" data-toggle="modal" class="btn btn-success">
                        <span class="fa fa-check-square-o"></span> Dejar Vigente
                    </a>
                    <a ng-click="ReenviarMailBienvenida()" ng-hide="formData.estado=='C' || idUsuario==0" data-toggle="modal" class="btn btn-warning">
                        <span class="fa fa-fw fa-envelope"></span> Re-enviar E-Mail de Bienvenida
                    </a>
                    
                </div>
            </div>
            <label class="btn btn-default" ng-show="idUsuario==0">
                <input type="checkbox" ng-model="formData.versionInicial" autocomplete="off"> Crear versión inicial
            </label>
            <label class="btn btn-default" ng-show="formData.versionInicial && idUsuario==0">
                <input type="checkbox" ng-model="formData.hasDeploy" autocomplete="off"> Agregar Deploy31 a la versión inicial
            </label>
            <div class="btn-toolbar visible-xs-block">
                <div class="btn-group" role="toolbar">
                    <div class="btn-group" role="group">
                        <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle">
                            <span class="fa fa-fw fa-binoculars"></span> Actions <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a ng-click="ShowConfirm()" ng-hide="formData.estado=='C' || idUsuario==0" data-toggle="modal" class="btn btn-danger">
                                    <span class="fa fa-fw fa-trash-o"></span> Deja No Vigente
                                </a>
                                <a ng-click="ShowConfirm()" ng-hide="formData.estado=='V' || idUsuario==0" data-toggle="modal" class="btn btn-success">
                                    <span class="fa fa-fw fa-trash-o"></span> Dejar Vigente
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{titulo}}</h3>
                </div>
                <div class="panel-body">
                    <form name="frmMain" method="post" action="#" novalidate>
                        <div class="form-group">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input class="form-control" type="text" name="nombre" placeholder="Nombres" ng-model="formData.nombre" required="required" ng-maxlength="100" ng-model-options="{ updateOn: 'blur' }">
                            </div>
                            <span class="error_ingreso" ng-show="frmMain.nombre.$error.required  && frmMain.nombre.$touched">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Campo requerido.
                            </span>
                            <span class="error_ingreso" ng-show="frmMain.nombre.$error.maxlength">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Largo máximo no debe superar los 100 carácteres
                            </span>
                        </div>

                        <div class="form-group">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input class="form-control" type="text" name="apellido" placeholder="Apellidos" ng-model="formData.apellido" required="required" ng-maxlength="100" ng-model-options="{ updateOn: 'blur' }">
                            </div>
                            <span class="error_ingreso" ng-show="frmMain.apellido.$error.required  && frmMain.apellido.$touched">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Campo requerido.
                            </span>
                            <span class="error_ingreso" ng-show="frmMain.apellido.$error.maxlength">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Largo máximo no debe superar los 100 carácteres
                            </span>
                        </div>

                        <div class="form-group">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                <input class="form-control" type="email" name="mail" placeholder="Mail" ng-model="formData.mail" ng-pattern="emailFormat" required="required" ng-maxlength="100" ng-model-options="{ updateOn: 'blur' }">
                            </div>
                            <span class="error_ingreso" ng-show="frmMain.mail.$error.required && frmMain.mail.$touched">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Campo requerido.
                            </span>
                            <span class="error_ingreso" ng-show="frmMain.mail.$error.maxlength">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Largo máximo no debe superar los 100 carácteres
                            </span>
                            <span class="error_ingreso" ng-show="frmMain.mail.$error.pattern">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> E-Mail incorrecto.
                            </span>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-group fa-fw"></i></span>
                                <select class="form-control" name="perfil" ng-model="formData.perfil" required="required" ng-options="perfil.CodPrf as perfil.NomPrf for perfil in perfiles">
                                    <option value="">Perf&iacute;l</option> <!-- not selected / blank option -->
                                </select>
                            </div>
                            <span class="error_ingreso" ng-show="frmMain.perfil.$error.required && frmMain.perfil.$touched">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Campo requerido.
                            </span>
                        </div>

                        <input type="hidden" ng-model="formData.idPersona" />
                        <input type="hidden" ng-model="formData.estado" />

                        <hr />

                        <button type="button" class="btn btn-primary btn-block" ng-click="frmMain.$valid && SaveUsuario(formData)" ng-disabled="!increate">
                            <span class="fa fa-pencil-square-o" ng-show="increate"></span>
                            <span class="fa fa-circle-o-notch fa-spin" ng-hide="increate"></span> {{labelcreate}}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="loading-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                </div>
                <div class="modal-body">
                    <center>
                        <h1><i ng-hide="AddUserOK" class="fa fa-spinner fa-pulse"></i></h1>
                        <br />
                    </center>
                    <div class="form-group">
                        <textarea class="form-control" rows="5" ng-model="lblStatUser"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" ng-disabled="!AddUserOK" ng-click="CerrarLoadingModal()">OK</button>
                </div>
            </div>

        </div>
    </div>

    <div id="delete-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" ng-show="formData.estado=='V'">Confirmar No Vigencia</h4>
                    <h4 class="modal-title" ng-show="formData.estado=='C'">Confirmar Vigencia</h4>
                </div>
                <div class="modal-body">
                    <span ng-show="formData.estado=='V'">¿Confirma que desea dejar <b>No Vigente</b> al usuario?</span>
                    <span ng-show="formData.estado=='C'">¿Confirma que desea dejar Vigente al usuario?</span>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" data-dismiss="modal" ng-click="Eliminar('C')" ng-show="formData.estado=='V'">Confirmar</button>
                    <button class="btn btn-success" data-dismiss="modal" ng-click="Eliminar('V')" ng-show="formData.estado=='C'">Confirmar</button>
                    <button class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

</div>



